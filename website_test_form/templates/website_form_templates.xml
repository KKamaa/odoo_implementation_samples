<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="website_form_test" name="Website Form">
        <t t-call="website.layout">
            <form class="form" style="margin: 40px;">
                <div class="form-group">
                    <label for="inputMobile">First Name
                        <span style="color:red;">*</span>
                    </label>
                    <input type="text" class="form-control"
                           style="width: 500px;"
                           id="first_name"
                           placeholder="Paul"/>
                </div>
                <div class="form-group">
                    <label for="inputMobile">Last Name
                        <span style="color:red;">*</span>
                    </label>
                    <input type="text" class="form-control"
                           style="width: 500px;"
                           id="last_name"
                           placeholder="Smith"/>
                </div>
                <div class="form-group">
                    <div style="margin: 25px 0px;"
                         class="g-recaptcha"
                         t-attf-data-sitekey="#{site_key}"
                         id="recaptcha_widget"></div>
                </div>
                <button
                        type="submit"
                        class="btn btn-success ">
                    Submit
                </button>
            </form>
        </t>
    </template>
</odoo>